@model List<BaseballBandit.Models.Inventory>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Baseball Bandits</h1>
</div>

<div class="container text-center">
    @for(int i = 0; i < Model.Count(); i+=2)
    {
        <div class="row">
            <div class="col">
                @Model[i].Brand @Model[i].Name
                <img src="/images/@Model[i].ImagePath" width="200" height="200">
            </div>
            @if(i+1 >= Model.Count())
            {
                break;
            }
            else if(i+1 == Model.Count())
            {
                continue;
            }
            else
            {
                <div class="col">
                    @Model[i + 1].Brand @Model[i + 1].Name
                    <img src="/images/@Model[i+1].ImagePath" width="200" height="200">
                </div>
            }
        </div>
        }
    }
</div>

